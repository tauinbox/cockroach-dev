<!DOCTYPE html>
<html>
  <head>
    <title>Cockroach-Camp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'cockroach-logo2.ico' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Kaushan+Script' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <%= render 'nav' %>

    <% if notice %>
      <div class="container">
        <p class="alert alert-info"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="container">
        <p class="alert alert-danger"><%= alert %></p>
      </div>
    <% end %>
    
    <%= render 'shared/sign_in' %>
    <%= render 'shared/sign_up' %>

    <div class="container">
      <%= yield %>
    </div>

    <%= render 'footer' %>

  </body>
</html>
